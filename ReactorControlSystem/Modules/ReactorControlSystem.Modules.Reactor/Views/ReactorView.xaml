<UserControl
    x:Class="ReactorControlSystem.Modules.Reactor.Views.ReactorView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    d:DesignHeight="1080"
    d:DesignWidth="1920"
    prism:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="420" />
        </Grid.ColumnDefinitions>

        <!--  反应釜结构图 + 监测数据曲线  -->
        <Grid Grid.Column="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <Viewbox Grid.Row="0">
                    <Canvas
                        Width="1500"
                        Height="600"
                        Background="AliceBlue">
                        <Image
                            Canvas.Left="542"
                            Canvas.Top="63"
                            Width="49"
                            Height="227"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Source="/ReactorControlSystem.Core;component/Images/feeding.png" />
                        <Image
                            Canvas.Left="956"
                            Canvas.Top="91"
                            Width="265"
                            Height="422"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Source="/ReactorControlSystem.Core;component/Images/reactor.png" />
                        <Image
                            Canvas.Left="160"
                            Canvas.Top="274"
                            Source="/ReactorControlSystem.Core;component/Images/balance.png" />

                        <Path Data="M 280,290 L 280, 115 L 800,115 L 800 270 L 1050 270" Stroke="Green" />
                        <Path Data="M 565,110 L 565,45 L 470,45" Stroke="Red" />
                        <Path Data="M 220,390 L 220,155 L 150,155" Stroke="Red" />
                        <Path Data="M 1010,268 L 1010,135 L 900,135" Stroke="Red" />
                        <Path Data="M 1035,265 L 1035,60 L 950,60" Stroke="Red" />
                        <Path Data="M 1125,235 L 1125,60 L 1250,60" Stroke="Red" />
                        <Path Data="M 1115,270 L 1170,270 L 1170,127 L 1230,127" Stroke="Red" />
                        <Path Data="M 1080,400 L 1210,400 L 1210,190 L 1230,190" Stroke="Red" />

                        <CheckBox
                            Uid="0.01"
                            Canvas.Left="293"
                            Canvas.Top="25"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Style="{StaticResource ReactorCheckboxStyle}"
                            Tag="进料速度(ML/min):" />
                        <CheckBox
                            Uid="0.02"
                            Canvas.Left="49"
                            Canvas.Top="136"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Style="{StaticResource ReactorCheckboxStyle}"
                            Tag="天平示数:" />
                        <CheckBox
                            Uid="0.03"
                            Canvas.Left="847"
                            Canvas.Top="45"
                            Style="{StaticResource ReactorCheckboxStyle}"
                            Tag="搅拌器速度:" />
                        <CheckBox
                            Uid="0.04"
                            Canvas.Left="847"
                            Canvas.Top="116"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Top"
                            Style="{StaticResource ReactorCheckboxStyle}"
                            Tag="浊度:" />
                        <CheckBox
                            Uid="0.05"
                            Canvas.Left="1225"
                            Canvas.Top="45"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Style="{StaticResource ReactorCheckboxStyle}"
                            Tag="冷却水温度1:" />
                        <CheckBox
                            Uid="0.06"
                            Canvas.Left="1225"
                            Canvas.Top="109"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Style="{StaticResource ReactorCheckboxStyle}"
                            Tag="反应釜温度:" />
                        <CheckBox
                            Uid="0.07"
                            Canvas.Left="1225"
                            Canvas.Top="173"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Top"
                            Style="{StaticResource ReactorCheckboxStyle}"
                            Tag="冷却水温度2:" />
                    </Canvas>
                </Viewbox>
            </Grid>
        </Grid>

        <Grid Grid.Column="1" />
    </Grid>
</UserControl>
